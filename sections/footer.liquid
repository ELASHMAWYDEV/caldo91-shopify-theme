            <img
              src="{{ section.settings.logo | image_url: width: 150 }}"
              alt="{{ section.settings.logo.alt | default: shop.name }}"
              loading="lazy"
              width="150"
              height="{{ section.settings.logo.height | divided_by: section.settings.logo.width | times: 150 | round }}"
            >
          </div>
        {%- else -%}
          <div class="footer__logo-wrapper">
            <h2>{{ shop.name }}</h2>
          </div>
        {%- endif -%}
      </div>

      <!-- Navigation Columns - Wrapped in a container for mobile grid layout -->
      <div class="footer__links-container">
        {%- for block in section.blocks -%}
          <div class="footer-block" {{ block.shopify_attributes }}>
            {%- if block.settings.heading != blank -%}
              <h2 class="footer-block__heading">{{ block.settings.heading }}</h2>
            {%- endif -%}

            {%- case block.type -%}
              {%- when 'link_list' -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer-block__details-content">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a href="{{ link.url }}" class="link{% if link.active %} link--active{% endif %}">
                          {{ link.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}

              {%- when 'text' -%}
                <div class="footer-block__details-content rte">
                  {{ block.settings.text }}
                </div>

              {%- when 'custom_links' -%}
                <ul class="footer-block__details-content">
                  {%- if block.settings.link_1_text != blank -%}
                    <li>
                      <a href="{{ block.settings.link_1_url }}">{{ block.settings.link_1_text }}</a>
                    </li>
                  {%- endif -%}
                  {%- if block.settings.link_2_text != blank -%}
                    <li>
                      <a href="{{ block.settings.link_2_url }}">{{ block.settings.link_2_text }}</a>
                    </li>
                  {%- endif -%}
                  {%- if block.settings.link_3_text != blank -%}
                    <li>
                      <a href="{{ block.settings.link_3_url }}">{{ block.settings.link_3_text }}</a>
                    </li>
                  {%- endif -%}
                  {%- if block.settings.link_4_text != blank -%}
                    <li>
                      <a href="{{ block.settings.link_4_url }}">{{ block.settings.link_4_text }}</a>
                    </li>
                  {%- endif -%}
                  {%- if block.settings.link_5_text != blank -%}
                    <li>
                      <a href="{{ block.settings.link_5_url }}">{{ block.settings.link_5_text }}</a>
