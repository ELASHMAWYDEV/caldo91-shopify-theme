{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    background-color: #1e1e1e; /* #0f1d51 */
    color: #ffffff;
    padding: 40px 0 20px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .footer .page-width {
    margin: 0;
    align-self: center;
    width: 100%;
  }

  .footer a {
    color: #ffffff;
    text-decoration: none;
  }

  .footer a:hover {
    opacity: 0.8;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .footer__content-top {
    display: flex;
    flex-direction: column;
    gap: 0px;
  }

  .footer-block.footer-block--brand {
    width: 100%;
    margin-top: 10px;
    display: flex;
    flex-direction: column;
    justify-content: left;
    align-items: left;
    margin-bottom: 10px;
  }

  /* Links section container for 2 columns mobile layout */
  .footer__links-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0px;
    width: 100%;
  }

  .footer__links-container .footer-block {
    margin-bottom: 0;
    padding-bottom: 0;
  }

  @media screen and (min-width: 750px) {
    .footer__content-top {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 30px;
    }

    .footer-block.footer-block--brand {
      grid-column: span 1;
      margin-bottom: 0;
    }

    .footer__links-container {
      display: contents;
    }
  }

  .footer__logo-wrapper {
    max-width: 120px;
    margin-bottom: 20px;
    background-color: #1e1e1e; /* #0f1d51 */
  }

  .footer__logo-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .footer-block {
    margin-bottom: 25px;
    padding-bottom: 20px;
  }

  @media screen and (min-width: 750px) {
    .footer-block {
      padding-bottom: 0;
    }
  }

  .footer-block__heading {
    font-size: 1.1rem;
    font-weight: 500;
    margin: 0 0 15px 0;
    text-transform: uppercase;
  }

  .footer-block__details-content {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-block__details-content li {
    margin-bottom: 12px;
  }

  .footer-block__details-content a {
    color: #ffffff;
    text-decoration: none;
    font-size: 1.4rem;
  }

  .footer__payment-social-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin: 20px 0;
    padding: 15px 0;
  }

  @media screen and (min-width: 750px) {
    .footer__payment-social-container {
      display: none;
    }
  }

  .footer__content-bottom {
    margin-top: 0px;
    padding-top: 0px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer__content-bottom-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0px;
  }

  @media screen and (min-width: 750px) {
    .footer__content-bottom-wrapper {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: 0;
    }
  }

  .footer__copyright {
    text-align: center;
    margin-bottom: 15px;
  }

  @media screen and (min-width: 750px) {
    .footer__copyright {
      text-align: left;
      margin-bottom: 0;
    }
  }

  .footer__payment-icons {
    display: flex;
    margin-top: 10px;
    margin-bottom: 15px;
    justify-content: center;
  }

  .footer__payment-icons img {
    width: 50px;
    height: 50px;
    object-fit: contain;
  }

  .payment-icon {
    margin-right: 10px;
  }

  .footer__desktop-payment-social {
    display: none;
  }

  @media screen and (min-width: 750px) {
    .footer__desktop-payment-social {
      display: flex;
    }

    .footer__payment-icons {
      margin-top: 0;
      margin-bottom: 0;
    }
  }

  .footer__social {
    display: flex;
    gap: 15px;
    margin-top: 10px;
    justify-content: center;
    align-items: center;
  }

  .footer__social.mobile-only {
      display: none;
  }

  @media screen and (min-width: 750px) {
    .footer__social {
      margin-top: 0;
      justify-content: flex-end;
    }
  }

  .social-icon {
    color: #ffffff;
    font-size: 24px;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .social-icon:hover {
    transform: translateY(-3px);
    opacity: 0.8;
  }
{%- endstyle -%}

