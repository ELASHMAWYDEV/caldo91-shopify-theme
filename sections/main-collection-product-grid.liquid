{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Make the product grid take full width and set gap to 15px */
  #product-grid {
    width: 100%;
    max-width: 100%;
    gap: 15px;
    padding-left: 15px;
    padding-right: 15px;
    display: flex;
    flex-wrap: wrap;
  }

  /* Style for grid items */
  #product-grid .grid__item {
    margin-top: 0px;
    margin-bottom: 15px;
    padding: 0;
  }

  /* Ensure proper grid columns on desktop and mobile */
  @media screen and (min-width: 990px) {
    #product-grid.grid--4-col-desktop .grid__item {
      width: calc((100% - 45px) / 4);
      max-width: calc((100% - 45px) / 4);
      flex: 0 0 calc((100% - 45px) / 4);
    }
  }

  @media screen and (max-width: 989px) and (min-width: 750px) {
    #product-grid.grid--2-col-tablet-down .grid__item {
      width: calc((100% - 15px) / 2);
      max-width: calc((100% - 15px) / 2);
      flex: 0 0 calc((100% - 15px) / 2);
    }
  }

  /* Minimal spacing for mobile view */
  @media screen and (max-width: 749px) {
    /* Reduce grid gap and padding */
    #product-grid {
      gap: 6px;
      padding-left: 6px;
      padding-right: 6px;
    }

    /* Adjust grid item size and spacing */
    #product-grid.grid--2-col-tablet-down .grid__item {
      width: calc((100% - 6px) / 2);
      max-width: calc((100% - 6px) / 2);
      flex: 0 0 calc((100% - 6px) / 2);
      margin-bottom: 6px;
    }

    /* Reduce card padding */
    .card {
      padding: 0;
      margin: 0;
    }

    .card__inner {
      padding: 0;
      margin: 0;
    }

    /* Minimize spacing in card content */
    .card__content {
      padding: 3px 0;
      margin: 0;
    }

    .card__information {
      padding: 3px 0;
      margin: 0;
    }

    /* Reduce text spacing */
    .card__heading {
      margin-top: 3px;
      margin-bottom: 3px;
      font-size: 0.85em;
      line-height: 1.1;
    }

    .price__container {
      margin-top: 2px;
      margin-bottom: 2px;
    }

    /* Reduce badge sizes */
    .card__badge {
      margin-top: 2px;
    }

    /* Remove any box shadows */
    .card, .card__inner, .card__content {
      box-shadow: none !important;
    }

    /* Reduce border thicknesses */
    .card, .card__inner {
      border-width: 0;
    }

    /* Minimize section padding */
    .section-{{ section.id }}-padding {
      padding-top: 8px;
      padding-bottom: 8px;
    }

    /* Compact product card */
    .card-wrapper.product-card-wrapper {
      margin: 0;
    }

    /* Smaller font for prices */
    .price, .price__regular, .price__sale {
      font-size: 0.85em;
      line-height: 1.1;
    }

    /* Reduce any padding around images */
    .card__media, .media {
      margin: 0;
      padding: 0;
    }

    /* Reduce pagination wrapper spacing */
    .pagination-wrapper {
      padding-left: 6px;
      padding-right: 6px;
      margin-top: 8px;
    }

    /* Reduce space between cards and pagination */
    .collection {
      margin-bottom: 6px;
    }

    /* Minimize facets padding if they're visible */
    .facets-container {
      padding: 4px;
    }

    /* Make loading spinners smaller */
    .spinner {
      width: 1rem;
      height: 1rem;
    }

    /* Reduce space around badge text */
    .badge {
      padding: 0.2rem 0.5rem;
      font-size: 0.7rem;
    }
  }

  /* Center text elements in product cards on desktop */
  @media screen and (min-width: 750px) {
    .card__heading {
      text-align: center;
      margin-left: auto;
      margin-right: auto;
      font-family: 'Montserrat', sans-serif;
    }

    .card-information {
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .price {
      justify-content: center;
      display: flex;
    }

    .price__container {
      justify-content: center;
      display: flex;
    }

    .card__badge {
      display: flex;
      justify-content: center;
      width: 100%;
    }

    .caption-with-letter-spacing {
      text-align: center;
      width: 100%;
    }

    .rating {
      justify-content: center;
      margin: 0 auto;
    }

    .rating-text, .rating-count {
      text-align: center;
      margin: 0 auto;
    }

    .card__information-volume-pricing-note {
      text-align: center;
      width: 100%;
    }

    /* Ensure product card information is centered */
    .card__content {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .card__information {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* Ensure all links in the card are centered */
    .full-unstyled-link {
      text-align: center;
      width: 100%;
      display: block;
    }
  }

  /* Left align text elements in product cards on mobile */
  @media screen and (max-width: 749px) {
    .card__heading {
      text-align: left;
      margin-left: 0;
      margin-right: auto;
    }

    .card-information {
      text-align: left;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    .price {
      justify-content: flex-start;
      display: flex;
    }

    .price__container {
      justify-content: flex-start;
      display: flex;
    }

    .card__badge {
      display: flex;
      justify-content: flex-start;
      width: 100%;
    }

    .caption-with-letter-spacing {
      text-align: left;
      width: 100%;
    }

    .rating {
      justify-content: flex-start;
      margin: 0;
    }

    .rating-text, .rating-count {
      text-align: left;
      margin: 0;
    }

    .card__information-volume-pricing-note {
      text-align: left;
      width: 100%;
    }

    /* Ensure product card information is left-aligned */
    .card__content {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    .card__information {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    /* Ensure all links in the card are left-aligned */
    .full-unstyled-link {
      text-align: left;
      width: 100%;
      display: block;
    }
  }

  /* Remove padding that might constrain the width */
  .collection {
    width: 100%;
    max-width: 100%;
    padding-left: 0;
    padding-right: 0;
  }

  /* Ensure the grid container takes full width */
  .product-grid-container {
    width: 100%;
    max-width: 100%;
  }

  /* Full width utility class */
  .full-width {
    width: 100%;
    max-width: 100%;
    padding-left: 0;
    padding-right: 0;
    margin-left: auto;
    margin-right: auto;
  }

  /* Container padding for pagination */
  .pagination-wrapper {
    padding-left: 15px;
    padding-right: 15px;
  }

  /* Ensure product cards fill grid items */
  .card-wrapper.product-card-wrapper {
    width: 100%;
    max-width: 100%;
  }

  .card.card--standard {
    width: 100%;
    max-width: 100%;
  }

  .card__inner {
    width: 100%;
  }

  /* Common styles for all screen sizes */
  .card__content {
    width: 100%;
  }

  .card__information {
    width: 100%;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {%- paginate collection.products by section.settings.products_per_page -%}
    {% comment %} Sort is the first tabbable element when filter type is vertical {% endcomment %}
    {%- if section.settings.enable_sorting and section.settings.filter_type == 'vertical' -%}
      <facet-filters-form class="facets facets-vertical-sort page-width small-hide">
        <form class="facets-vertical-form" id="FacetSortForm">
          <div class="facet-filters sorting caption">
            <div class="facet-filters__field">
              <h2 class="facet-filters__label caption-large text-body">
                <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
              </h2>
              <div class="select">
                {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                <select
                  name="sort_by"
                  class="facet-filters__sort select__select caption-large"
                  id="SortBy"
                  aria-describedby="a11y-refresh-page-message"
                >
                  {%- for option in collection.sort_options -%}
                    <option
                      value="{{ option.value | escape }}"
                      {% if option.value == sort_by %}
                        selected="selected"
                      {% endif %}
                    >
                      {{ option.name | escape }}
                    </option>
                  {%- endfor -%}
                </select>
                <span class="svg-wrapper">
                  {{- 'icon-caret.svg' | inline_asset_content -}}
                </span>
              </div>
            </div>
          </div>

          <div class="product-count-vertical light" role="status">
            <h2 class="product-count__text text-body">
              <span id="ProductCountDesktop">
                {%- if collection.results_count -%}
                  {{
                    'templates.search.results_with_count'
                    | t: terms: collection.terms, count: collection.results_count
                  }}
                {%- elsif collection.products_count == collection.all_products_count -%}
                  {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                {%- else -%}
                  {{
                    'products.facets.product_count'
                    | t: product_count: collection.products_count, count: collection.all_products_count
                  }}
                {%- endif -%}
              </span>
            </h2>
            {%- render 'loading-spinner' -%}
          </div>
        </form>
      </facet-filters-form>
    {%- endif -%}

    <div class="{% if section.settings.filter_type == 'vertical' %} facets-vertical{% endif %} full-width">
      {{ 'component-facets.css' | asset_url | stylesheet_tag }}
      <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
      {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
        <aside
          aria-labelledby="verticalTitle"
          class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %} full-width"
          id="main-collection-filters"
          data-id="{{ section.id }}"
        >
          {% render 'facets',
            results: collection,
            enable_filtering: section.settings.enable_filtering,
            enable_sorting: section.settings.enable_sorting,
            filter_type: section.settings.filter_type,
            paginate: paginate
          %}
        </aside>
      {%- endif -%}

      <div
        class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} full-width"
        id="ProductGridContainer"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
        {%- if collection.products.size == 0 -%}
          <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
            <div class="loading-overlay gradient"></div>
            <div class="title-wrapper center">
              <h2 class="title title--primary">
                {{ 'sections.collection_template.empty' | t -}}
                <br>
                {{
                  'sections.collection_template.use_fewer_filters_html'
                  | t: link: collection.url, class: 'underlined-link link'
                }}
              </h2>
            </div>
          </div>
        {%- else -%}
          <div
            class="collection"
          >
            <div class="loading-overlay gradient"></div>
            <ul
              id="product-grid"
              data-id="{{ section.id }}"
              class="
                grid product-grid grid--2-col-tablet-down
                grid--4-col-desktop
                {% if section.settings.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}
              "
            >
              {% assign skip_card_product_styles = false %}
              {%- for product in collection.products -%}
                {% assign lazy_load = false %}
                {%- if forloop.index > 2 -%}
                  {%- assign lazy_load = true -%}
                {%- endif -%}
                <li
                  class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {% if settings.animations_reveal_on_scroll %}
                    data-cascade
                    style="--animation-order: {{ forloop.index }};"
                  {% endif %}
                >
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    lazy_load: lazy_load,
                    skip_styles: skip_card_product_styles,
                    quick_add: section.settings.quick_add,
                    section_id: section.id
                  %}
                </li>
                {%- assign skip_card_product_styles = true -%}
              {%- endfor -%}
            </ul>

            {%- if paginate.pages > 1 -%}
              <div class="pagination-wrapper">
                {% render 'pagination', paginate: paginate, anchor: '' %}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endpaginate -%}
  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>

